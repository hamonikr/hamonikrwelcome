<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">

<policyconfig>

  <action id="org.freedesktop.policykit.pkexec.kakaotalk-install">
    <description>Run kakaotalk-install</description>
    <message>Authentication is required to run kakaotalk-install</message>
    <message xml:lang="ko">카카오톡 설치를 실행하려면 인증이 필요합니다.</message>
    <icon_name>lutris_kakaotalk</icon_name>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/hamonikr/hamonikrwelcome/scripts/kakaotalk-install</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">TRUE</annotate>
  </action>

  <action id="org.freedesktop.policykit.pkexec.hoffice-install">
    <description>Run hoffice-install</description>
    <message>Authentication is required to run hoffice-install</message>
    <message xml:lang="ko">한컴오피스 설치를 실행하려면 인증이 필요합니다.</message>
    <icon_name>hoffice11_default</icon_name>
    <defaults>
      <allow_any>no</allow_any>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/share/hamonikr/hamonikrwelcome/scripts/hoffice-install</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">TRUE</annotate>
  </action>

</policyconfig>
